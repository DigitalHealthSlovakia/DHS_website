---
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
    <div class="header-container">
        <div class="logo-box">
            <a href="/">
                <img src="/images/DHS_logo.png" alt="DHS Logo" class="logo-img" />
            </a>
        </div>

        <nav class="main-nav">
            <HeaderLink href="/en/about">About Us</HeaderLink>
            <HeaderLink href="/en/membership">Membership</HeaderLink>
            <HeaderLink href="/en/standards">HL7 Standards</HeaderLink>
            <HeaderLink href="/en/projects">Projects</HeaderLink>
            <HeaderLink href="/en/news">News</HeaderLink>
            <HeaderLink href="/en/contact">Contact</HeaderLink>
        </nav>

        <div class="header-actions">
            <HeaderLink href="/en/support" class="support-purple-btn">Support Us</HeaderLink>
            <div class="divider"></div>
                <div class="flag-group">
                    <a href="/sk">
                        <img src="https://flagcdn.com/w40/sk.png" alt="SK" class="nav-flag" />
                    </a>
                    <a href="/en">
                        <img src="https://flagcdn.com/w40/gb.png" alt="EN" class="nav-flag" />
                    </a>
                </div>
        </div>
    </div>
</header>

<style>
    .site-header {
        background-color: #1a1a3a !important; /* Solid Navy */
        border-bottom: 4px solid #4b0082;
        position: sticky;
        top: 0;
        z-index: 9999;
        width: 100%;
        height: 90px;
        display: flex;
        align-items: center;
    }

    .header-container {
        width: 100%;
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 40px; 
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-img {
        height: 55px;
        width: auto;
        display: block;
    }

    /* Nav Links Center */
    .main-nav {
        display: flex;
        gap: 1.5rem;
    }

    .main-nav :global(a) {
        color: #ffffff !important; 
        text-decoration: none;
        font-weight: 700;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: color 0.2s;
    }

    .main-nav :global(a:hover) {
        color: #8134af !important;
    }

    /* Right Actions */
    .header-actions {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .support-purple-btn {
        background-color: #4b0082 !important;
        color: #ffffff !important;
        padding: 8px 18px !important;
        border-radius: 5px;
        border: 1px solid #8134af !important;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        text-decoration: none;
        white-space: nowrap; /* Prevents text wrapping */
    }

    .support-purple-btn:hover {
        background-color: #8134af !important;
    }

    .divider {
        width: 1px;
        height: 30px;
        background-color: rgba(255, 255, 255, 0.2);
    }

    .flag-group {
        display: flex;
        gap: 12px;
        min-width: 60px; /* Forces space for the flags */
    }

    /* CRITICAL FIX: Explicit dimensions to prevent collapsing to 0px */
    .flag-group img {
        width: 24px !important;
        height: auto !important;
        display: block !important;
        border: 1px solid #333;
        opacity: 1 !important; /* Ensure they aren't hidden by global opacity */
    }

    /* Responsive fallback */
    @media (max-width: 1100px) {
        .main-nav { display: none; } /* Hide menu on small screens to keep logo/flags visible */
        .header-container { padding: 0 20px; }
    }
    
    .nav-flag {
    width: 28px !important;
    height: auto !important;
    display: block !important;
    border: 1px solid #333;
    }
</style>